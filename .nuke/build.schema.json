          ]
        },
        "AllProjects": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Project"
          }
        },
        "AllSolutionFolders": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/SolutionFolder"
          }
        },
        "Projects": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Project"
          }
        },
        "SolutionFolders": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/SolutionFolder"
          }
        }
      }
    },
    "Project": {
      "type": "object",
      "properties": {
        "Name": {
          "type": [
            "null",
            "string"
          ]
        },
        "Solution": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Solution"
            }
          ]
        },
        "Parent": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/IProjectContainer"
            }
          ]
        },
        "RelativePath": {
          "type": [
            "null",
            "string"
          ]
        },
        "Path": {
          "type": [
            "null",
            "string"
          ]
        },
        "FileName": {
          "type": [
            "null",
            "string"
          ]
        },
        "Directory": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "IProjectContainer": {
      "type": "object",
      "x-abstract": true,
      "properties": {
        "Parent": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/IProjectContainer"
            }
          ]
        },
        "Projects": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Project"
          }
        },
        "SolutionFolders": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/SolutionFolder"
          }
        }
      }
    },
    "SolutionFolder": {
      "type": "object",
      "properties": {
        "Name": {
          "type": [
            "null",
            "string"
          ]
        },
        "Solution": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Solution"
            }
          ]
        },
        "Parent": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/IProjectContainer"
            }
          ]
        },
        "Projects": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Project"
          }
        },
        "SolutionFolders": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/SolutionFolder"
          }
        }
      }
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Solution": {
          "description": "Solution file to build",
          "$ref": "#/definitions/Solution"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
