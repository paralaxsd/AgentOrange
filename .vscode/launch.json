{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Console",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Console",
      "program": "${workspaceFolder}/src/AgentOrange.Console/bin/Debug/net10.0/AgentOrange.Console.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/AgentOrange.Console",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "AO_LLM_PROVIDER": "Google",
        "GEMINI_API_KEY": "${env:GEMINI_API_KEY}"
      }
    },
    {
      "name": "Launch Web",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: Web",
      "program": "${workspaceFolder}/src/AgentOrange.Web/bin/Debug/net10.0/AgentOrange.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/AgentOrange.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
