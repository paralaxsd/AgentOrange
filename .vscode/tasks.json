{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "nuke: Clean",
      "command": "${workspaceFolder}/build.cmd",
      "type": "shell",
      "args": ["Clean"],
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "nuke: Restore",
      "command": "${workspaceFolder}/build.cmd",
      "type": "shell",
      "args": ["Restore"],
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "nuke: Compile",
      "command": "${workspaceFolder}/build.cmd",
      "type": "shell",
      "args": ["Compile"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build: Console",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/AgentOrange.Console/AgentOrange.Console.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build: Web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/AgentOrange.Web/AgentOrange.Web.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "watch: Console",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/AgentOrange.Console/AgentOrange.Console.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "watch: Web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/AgentOrange.Web/AgentOrange.Web.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    }
  ]
}
